                <Anchors>
                <Anchor point="TOPLEFT" relativeTo="$parent" x="12" y="-62" />
                </Anchors>
                <Shadow>
                    <Offset x="1" y="1" />
                    <Color r="0" g="0" b="0"/>
                </Shadow>
            </FontString>
            <FontString name="VilefiendTime" font="Fonts\FRIZQT__.TTF" text="13.2 seconds" justifyH="LEFT" justifyV="TOP">
