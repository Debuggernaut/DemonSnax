            <ScrollFrame name="DemonSnax_ScrollFrame" inherits="UIPanelScrollFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset x="12" y="-132"/>
                    </Anchor>
                    <Anchor point="BOTTOMRIGHT">
                        <Offset x="-28" y="40"/>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="BORDER">
                        <!-- gradient for scrollbar track -->
